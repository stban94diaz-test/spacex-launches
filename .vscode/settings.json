{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.organizeImports": "always"
  },
  "[javascript]": {
    "editor.defaultFormatter": "prettier"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "prettier"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "prettier"
  }
}